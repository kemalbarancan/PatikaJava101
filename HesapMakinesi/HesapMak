java.util.Scanner;
public class Test {
    public static void main(String[] args) {

        int n1,n2,select;

        Scanner input = new Scanner(System.in);
        System.out.print("İlk sayiyi giriniz: ");
        n1 = input.nextInt();
        System.out.println("İkinci sayiyi giriniz: ");
        n2 = input.nextInt();

        System.out.println("1-Toplama\n2-Çıkarma\n3-Çarpma\n4-Bölme");
        System.out.println("Seciminiz nedir?");
        select = input.nextInt();

        switch (select){
            case 1:
                System.out.println("İşlemin sonucu " +(n1+n2));
                break;
            case 2:
                System.out.println("işlemin sonucu " +(n1-n2));
                break;
            case 3:
                System.out.println("İşlemin sonucu " +(n1*n2));
                break;
            case 4:
                System.out.println("İşlemin sonucu " +(n1/n2));
                break;
            default:
                System.out.println("Yanlış bir tuşa bastınız.");
                break;
        }
